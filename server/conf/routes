# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index()

#GET     /api/v1/users/email             controllers.Users.getByEmail()
GET     /api/v1/users/current           controllers.Users.getCurrent
GET     /api/v1/users/:id               controllers.Users.getByID(id: Long)
POST    /api/v1/users                   controllers.Users.create()
POST    /api/v1/authenticate            controllers.Users.authenticate()

GET     /api/v1/todos                   controllers.Tasks.list()
GET     /api/v1/todos/:id               controllers.Tasks.getByID(id: Long)
PUT     /api/v1/todos/:id               controllers.Tasks.update(id: Long)
DELETE  /api/v1/todos/:id               controllers.Tasks.delete(id: Long)
POST    /api/v1/todos                   controllers.Tasks.add()
POST    /api/v1/todos/:id/toggle-done   controllers.Tasks.toggleDone(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
